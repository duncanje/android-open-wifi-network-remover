<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <CheckBox
        android:id="@+id/enabled_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="checkBoxClick"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/enabled_checkbox_label"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/settings_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <CheckBox
            android:id="@+id/notification_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkBoxClick"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/notification_checkbox_label"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/whitelist_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/whitelist_header_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp" >

                <TextView
                    android:id="@+id/whitelist_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:text="@string/whitelist_heading"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:id="@+id/whitelistAddButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical|center_horizontal|fill_horizontal"
                    android:minHeight="45dip"
                    android:minWidth="50dip"
                    android:onClick="whitelistAddHandler"
                    android:text="@string/whitelist_add_button_label" />

                <Button
                    android:id="@+id/whitelistRemoveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical|center_horizontal|fill_horizontal"
                    android:minHeight="45dip"
                    android:minWidth="50dip"
                    android:onClick="whitelistRemoveHandler"
                    android:text="@string/whitelist_remove_button_label" />

            </LinearLayout>

            <ListView
                android:id="@android:id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="multipleChoice" >
            </ListView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>