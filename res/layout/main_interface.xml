<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/enabled_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkBoxClick"
            android:text="@string/enabled_checkbox_label" />

        <CheckBox
            android:id="@+id/notification_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkBoxClick"
            android:text="@string/notification_checkbox_label" />

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="321dp" >
        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/whitelistAddButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical|center_horizontal|fill_horizontal"
                android:text="@string/whitelist_add_button_label" />

            <Button
                android:id="@+id/whitelistRemoveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal|fill_horizontal"
                android:text="@string/whitelist_remove_button_label" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>